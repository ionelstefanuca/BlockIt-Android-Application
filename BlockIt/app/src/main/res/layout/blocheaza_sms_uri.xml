<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1"
    android:background="@drawable/x">

    <EditText
        android:id="@+id/cuvinte_sms"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Introdu un cuvant sau o propozitie"
        android:inputType="textEmailAddress"
        android:layout_marginTop="10dp"
        android:layout_alignParentTop="true"
        android:gravity="center_horizontal"
        android:textColor="#ffffff"
        android:maxLength="20"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Adauga"
        android:id="@+id/btn_cuv_sms"
        android:layout_below="@+id/cuvinte_sms"
        android:layout_centerHorizontal="true"
        android:textColor="#ffffff"
        android:background="@drawable/button_effect4"/>

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/listViewSms"
        android:layout_below="@+id/btn_cuv_sms"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>